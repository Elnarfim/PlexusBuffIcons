<Bindings>
	<Binding name="PLEXUSBUFFICONS_TOGGLE_BUFF" runOnUp="false" header="PLEXUSBUFFICONS">
		Plexus:GetModule("PlexusBuffIconStatus").db.profile.showbuff = not Plexus:GetModule("PlexusBuffIconStatus").db.profile.showbuff;
		Plexus:GetModule("PlexusBuffIconStatus"):UpdateAllUnitsBuffs();
	</Binding>
	<Binding name="PLEXUSBUFFICONS_TOGGLE_BUFF_FILTER" runOnUp="false">
		Plexus:GetModule("PlexusBuffIconStatus").db.profile.bufffilter = not Plexus:GetModule("PlexusBuffIconStatus").db.profile.bufffilter;
		Plexus:GetModule("PlexusBuffIconStatus"):UpdateAllUnitsBuffs();
	</Binding>
</Bindings>
